<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="PlatformyTechnologiczneLab4PersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <class>org.example.Student</class>
        <class>org.example.Department</class>
        <properties>
            <!-- Database connection properties -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:default,DB_CLOSE_DELAY=-1"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.user" value="szym"/>
            <property name="jakarta.persistence.jdbc.password" value="szym"/>

            <!-- Hibernate properties -->
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.h2.console.enabled" value="true"/>
            <property name="hibernate.h2.console.url" value="/h2-console"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <!-- czy kod SQL zapytań robionych przez Hibernate ma się wyświetlać w konsoli -->
            <property name="hibernate.show_sql" value="false" /> </properties>
    </persistence-unit>
</persistence>