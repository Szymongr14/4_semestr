<Window x:Class="lab10_wpf_cars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab10_wpf_cars"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="CarDataGrid" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Model" Width="150" Binding="{Binding Path=Model }" CanUserSort="True"/>
                <DataGridTextColumn Header="Year" Width="150" Binding="{Binding Path=Year}" CanUserSort="True"/>
                <DataGridTextColumn Header="Engine Displacement" Width="150" Binding="{Binding Path=Engine.Displacement}" CanUserSort="True"/>
                <DataGridTextColumn Header="Engine HorsePower" Width="150" Binding="{Binding Path=Engine.HorsePower}" CanUserSort="True"/>
                <DataGridTextColumn Header="Engine Type" Width="150" Binding="{Binding Path=Engine.Type}" CanUserSort="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
